
.post-container{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx 0;
  padding: 0 0 10rpx 0;
  background-color: #ffffff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
}

.post-author-date{
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date{
  margin: 0 0 5px 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
}

.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333333;
  margin: 0 0 10px 10px;
}

.post-image{
  margin-left: 15px;
  margin-bottom: 16px;
  width: 100%;
  height: 400rpx;
  margin: auto 0;
}

.post-content{
  color: #666;
  font-size: 28rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}

.post-like-image{
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-font{
  vertical-align: middle;
  margin-right: 20px;
}